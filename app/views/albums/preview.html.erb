<div class = "alert-error">
	<%= flash[:notice] %>
</div>
<div class ="form" style="margin: 5%">
	<%= form_tag "/albums", :method => :post do  %>
		<%= text_field :title, @album.title, :placeholder => "Title" %><br/>
		<%= text_field :artist_name, @album.artist_name, :placeholder => "Artist" %><br/>
    <p><%= @album.all_front_covers %></p>
    <p><%= @album.all_back_covers %></p>
    <%= f.label :change_front_cover_image %><br />
    <%= f.file_field :front_cover_image %><br/>
    <%= f.label :change_back_cover_image %><br />
    <%= f.file_field :back_cover_image %><br/>
		<%= submit_tag %>
	<% end %>
</div>