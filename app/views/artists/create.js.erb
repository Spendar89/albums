<% if @errors %>
  $('.album-results-div').html("<h2 style='color: white'>Cannot Find Artist</h2");
<% else %>
$('.albums-ajax-spinner').hide();
$('.results-holder').html("<%=j render :partial => 'album_results', :locals => {:albums_list => @albums_list} %>");
<% end %>

$('.album-result').click(function(){
  $('.ajax-background').show();
});  